@model IEnumerable<GerenciadorTarefas.Models.Tarefa>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tarefas";
    var tarefaParaEditar = ViewBag.TarefaParaEditar as GerenciadorTarefas.Models.Tarefa;
}

<h1>Tarefas</h1>


<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Nova Tarefa</a>
</div>

<hr />

<!-- Lista de tarefas -->
<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Concluída</th>
            <th>Data de Criação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.Concluida</td>
                <td>@item.DataCriacao</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>